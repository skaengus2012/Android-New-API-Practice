<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/google_play_app_bar_size"
    android:background="#efeeef"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
      android:id="@+id/ivIcon"
      android:layout_width="130dp"
      android:layout_height="30dp"
      android:src="@drawable/ic_google_play"/>

    <EditText
      android:layout_width="0dp"
      android:layout_height="35dp"
      android:layout_weight="1"
      android:paddingStart="5dp"
      android:paddingEnd="5dp"
      android:background="@android:color/white"
      android:hint="@string/hint_anko_search"
      android:textSize="13sp"/>

    <Button
      android:layout_width="wrap_content"
      android:layout_height="35dp"
      android:layout_marginRight="5dp"
      android:paddingStart="10dp"
      android:paddingEnd="10dp"
      android:background="#5383ED"
      android:minWidth="0dp"
      android:text="@string/label_anko_search"
      android:textColor="@android:color/white"
      android:textSize="13sp"/>

  </LinearLayout>

</LinearLayout>