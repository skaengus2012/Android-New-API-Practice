<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="constraintDimensionsTestButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomActionBarTheme" parent="@style/Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorAppBarThemeTutorial</item>
        <item name="colorPrimaryDark">@color/colorAppBarThemeTutorialDark</item>

        <!-- menu 쪽 색상 변경 -->
        <!--
        <item name="android:itemBackground">@color/skyBlue</item>
        <item name="android:textColor">@android:color/white</item>
        -->
    </style>

    <!-- toolbar textSize 변경 -->
    <style name="myToolbarTextAppearance" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- toolbar icon color 변경 -->
    <style name="myToolbarIconColor" parent="AppTheme">
        <item name="android:textColorSecondary">@color/colorPrimary</item>
    </style>e

    <style name="aacTutorialTextView" parent="Base.Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">25sp</item>
    </style>

</resources>
